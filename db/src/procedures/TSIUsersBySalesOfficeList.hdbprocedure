        "VKGRP" AS "SALES_GROUP", false AS "IS_SELECTED", true AS "IS_VISIBLE"
        FROM  "DGA_ZEMP_MASTER_ECC"  
        WHERE "VKGRP" IN (
            SELECT "RESULT" FROM "SplitCommaString"(:salesGroup)
        ) 
        AND (UPPER("EMAIL_TSI") LIKE searchText OR UPPER("TSINAME") LIKE searchText)
        ORDER BY "TSINAME" ASC LIMIT :topRec OFFSET :skipRec;

