        -- ON USERT."ID" = USER_SALES_GROUP_MAP."USER_ID"
        -- JOIN "DGA_ZEMP_MASTER_ECC" ZEMP_ECC ON ZEMP_ECC."VKGRP" = USER_SALES_GROUP_MAP."SALES_GROUP"
